                            <children>
                                <Label text="User Information" textFill="#795548">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="800.0">
                                    <children>
                                        <Text fill="#c0c0c0" strokeType="OUTSIDE" strokeWidth="0.0" text="Full Name:">
